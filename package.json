{
  "name": "shopify-admin-mcp",
  "version": "0.1.0",
  "description": "MCP server for Shopify Admin GraphQL API",
  "main": "dist/index.js",
  "bin": {
    "shopify-admin-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "shopify",
    "admin",
    "graphql",
    "claude",
    "anthropic"
  ],
  "author": "Michael Reimer <michael.reimer@mayuno.ch>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MAYUNO-International-LLC/shopify-admin-mcp.git"
  },
  "homepage": "https://github.com/MAYUNO-International-LLC/shopify-admin-mcp#readme",
  "bugs": {
    "url": "https://github.com/MAYUNO-International-LLC/shopify-admin-mcp/issues"
  },
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  }
}
